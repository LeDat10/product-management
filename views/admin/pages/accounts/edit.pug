extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000)
    h1(class="mb-4") Cập nhật tài khoản

    if(roles)
        form(
            action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        ) 

            div(class="form-group")
                label(class="fullName") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    value=data.fullName
                    required 
                )
            
            div(class="form-group")
                label(class="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    value=data.email
                    required 
                )
            
            div(class="form-group")
                label(class="password") Mật khẩu
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                )
            
            div(class="form-group")
                label(class="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone" 
                    value=data.phone
                )

            div(
                class="form-group"
                upload-image
            )
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                ) 
                img(
                    class="image-preview"
                    src=data.avatar
                    upload-image-preview
                )

            div(class="form-group")
                label(for="role_id") Phân quyền 
                select(name="role_id" id="role_id" class="form-control")
                    option(disabled) -- Chọn -- 
                    each item in roles
                        option(value=item.id selected=(data.id === item.role_id ? true : false)) #{item.title}
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(data.status === "active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    value="inactive"
                    name="status"
                    id="statusInactive"
                    checked=(data.status === "inactive" ? true : false)
                )
                label(for="statusInactive" class="form-check-label") Dừng hoạt động
            
            div(class="form-group")
            button(
                class="btn btn-primary"
                type="submit"
            ) Cập nhật
    else 
        p Vui lòng tạo nhóm quyền trước khi cập nhật tài khoản 
        div 
            a(href=`${prefixAdmin}/roles/create` class="btn btn-secondary") Tạo nhóm quyền